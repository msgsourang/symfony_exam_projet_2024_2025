{# templates/client/new.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-bold mb-6 text-blue-800">
                <i class="fas fa-user-plus mr-2"></i>Nouveau Client
            </h2>
            
            {{ form_start(form, { 'attr': { 'enctype': 'multipart/form-data', 'class': 'space-y-4' } }) }}
            
                <div class="form-row mb-4 flex items-center space-x-2">
                    {{ form_label(form.prenom, null, { 'label_attr': { 'class': 'w-full sm:w-1/6 flex-shrink-0 font-semibold text-gray-700 flex items-center' } }) }}
                    {{ form_widget(form.prenom) }}
                </div>
                
                <div class="form-row mb-4 flex items-center space-x-2">
                    {{ form_label(form.nom, null, { 'label_attr': { 'class': 'w-full sm:w-1/6 flex-shrink-0 font-semibold text-gray-700 flex items-center' } }) }}
                    {{ form_widget(form.nom) }}
                </div>
                
                <div class="form-row mb-4 flex items-center space-x-2">
                    {{ form_label(form.telephone, null, { 'label_attr': { 'class': 'w-1/6 flex-shrink-0 font-semibold text-gray-700 flex items-center' } }) }}
                    {{ form_widget(form.telephone) }}
                </div>
                
                <div class="form-row mb-4 flex items-center space-x-2">
                    {{ form_label(form.adresse, null, { 'label_attr': { 'class': 'w-1/6 flex-shrink-0 font-semibold text-gray-700 flex items-center' } }) }}
                    {{ form_widget(form.adresse) }}
                </div>
                
                <div class="form-row mb-4 flex items-center space-x-2">
                    {{ form_label(form.photo, null, { 'label_attr': { 'class': 'w-1/6 flex-shrink-0 font-semibold text-gray-700 flex items-center' } }) }}
                    {{ form_widget(form.photo) }}
                </div>
                
                <div class="mb-4 flex items-center">
                    <span class="toggle-label mr-2">Cr√©er un compte :</span>
                    {{ form_widget(form.creerCompte) }}
                    <span class="toggle-label ml-2 text-gray-700 font-semibold" id="toggleLabel">Non</span>
                </div>

                <div id="accountFields" class="hidden">
                </div>

                <button type="submit" class="mt-4 bg-blue-500 text-white p-2 rounded">Envoyer</button>
                
            {{ form_end(form) }}
        </div>
    </div>

    <script>
        function toggleAccountFields() {
            const accountFields = document.getElementById('accountFields');
            const toggleLabel = document.getElementById('toggleLabel');
            if (accountFields.classList.contains('hidden')) {
                accountFields.classList.remove('hidden');
                toggleLabel.textContent = 'Oui';
            } else {
                accountFields.classList.add('hidden');
                toggleLabel.textContent = 'Non';
            }
        }
    </script>
{% endblock %}
