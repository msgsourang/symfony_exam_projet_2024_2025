  }

  .header-user {
    width: 100%;
    justify-content: center;
  }

  .header-user img {
    width: 40px;
    height: 40px;
  }

  .header-user div {
    font-size: 0.8rem;
  }
}

@media (max-width: 640px) {
  .header-user {
    width: 100%;
    justify-content: center;
