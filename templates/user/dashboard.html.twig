            <thead>
                <tr>
                    <th class="py-3 px-6 text-center">Article</th>
                    <th class="py-3 px-6 text-center">Quantité Restante</th>
                    <th class="py-3 px-6 text-center">Prix</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articlesRupture %}
                    <tr>
                        <td class="py-3 px-6 text-center">{{ article.nom }}</td>
                        <td class="py-3 px-6 text-center">{{ article.quantite }}</td>
                        <td class="py-3 px-6 text-center">{{ article.prix }} FCFA</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>
